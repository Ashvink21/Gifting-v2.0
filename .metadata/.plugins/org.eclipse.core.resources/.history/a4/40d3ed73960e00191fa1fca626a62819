package test;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;

public class MandrillApp extends Try {
	public static void getAttribute() throws InterruptedException {
	
	driver.get("https://mandrillapp.com/login/");
	Thread.sleep(3000);
	driver.findElement(By.xpath("//*[@id=\"logins-block\"]/div[1]/a")).click();
	Thread.sleep(3000);
	driver.findElement(By.id("username")).sendKeys("hipbar");
	driver.findElement(By.id("password")).sendKeys("B00z$M@ndRiL1");
	driver.findElement(By.xpath("//*[@id=\"login-form\"]/fieldset/div[4]/button")).click();
	Thread.sleep(4000);
	driver.findElement(By.xpath("//*[@id=\"main-nav\"]/li[3]/a")).click();
	Thread.sleep(2000);
	WebElement TxtBoxContent = driver.findElement(By.className("tip tooltip tooltipstered"));
	TxtBoxContent.getAttribute("tip tooltip tooltipstered");
	System.out.println("Printing "+TxtBoxContent);

}
}
